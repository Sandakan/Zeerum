		<link rel="stylesheet" href="/styles/animations.css" />
		<script src="https://kit.fontawesome.com/080e99810e.js" crossorigin="anonymous"></script>
	</head>

	<body class="<%= theme %>">
		<nav class="nav-bar">
			<a href="/" class="label-container">
				<div class="label">zeerum</div>
			</a>
			<div class="link-list">
				<ul>
					<li><a class="home" href="/">Home</a></li>
					<li><a class="discover" href="/discover">Discover</a></li>
					<li><a class="write" href="/write">Write</a></li>
					<li id="get-started">
						<a class="get-started" name="get-started" href="/signup">Get started</a>
					</li>
					<li id="user-profile" class="user-profile"></li>
				</ul>
			</div>
			<div class="user-profile-dropdown" id="user-profile-dropdown">
				<ul>
					<li>
						<a href="/profile"><i class="fas fa-user"></i> Profile</a>
					</li>
					<li>
						<a href="#"><i class="fas fa-cog"></i> Settings</a>
					</li>
					<li id="logout">
						<a href="/logout"><i class="fas fa-sign-out-alt"></i> Log out</a>
					</li>
				</ul>
			</div>
		</nav>
		<div class="banner-container">
			<div class="banner">
				<div class="banner-img"></div>
				<div class="banner-elements-container">
					<div class="banner-text">
						<span
							><span class="banner-highlighted-text">Discover</span> new topics <br />
							to read.</span
						>
					</div>

					<div class="search-bar-container">
						<div class="search-bar">
							<div class="search-results-container">
								<div class="search-description">
									<img src="/images/search.webp" alt="A magnifying glass" />
									Search for anything from here including articles, categories, authors,
									hot topics etc
								</div>
							</div>
							<input
								type="search"
								name="search"
								id="search"
								placeholder="Search for Anything"
								enterkeyhint="search"
							/>
							<label for="search"></label>
							<div class="search-btn" id="search-btn"><i class="fas fa-search"></i></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="other-content">
			<div class="discover-categories-container discover-categories-loading">
				<div class="discover-category loading"></div>
				<div class="discover-category loading"></div>
				<div class="discover-category loading"></div>
				<div class="discover-category loading"></div>
				<div class="discover-category loading"></div>
				<div class="discover-category loading"></div>
			</div>
		</div>

		<div class="get-started-container">
			<div class="get-started-buttons-container">
				<div class="heading">Join with us to share your knowledge with others.</div>
				<div class="buttons-container">
					<a href="/login" class="log-in-btn">Log In</a>
					<span class="or">OR</span>
					<a href="/signup" class="signup-btn">Sign up</a>
				</div>
			</div>
			<div class="zeerum-user-logo-container">
				<span class="zeerum-user">
					zeerum <br />
					user <br />
					<i class="fas fa-medal"></i>
				</span>
			</div>
			<div class="get-started-description-container">
				<ul>
					<li>Our daily uploaded articles are now at your fingertips.</li>
					<li>They are personalized to your reading too.</li>
					<li>
						We'll send an email containing popular, trending and personalized articles from
						the authors right to your inbox.
					</li>
				</ul>
			</div>
		</div>

		<div class="alert-container">
			<div class="message-container"></div>
			<div class="buttons-container">
				<i class="fas fa-times close-btn"></i>
			</div>
		</div>

